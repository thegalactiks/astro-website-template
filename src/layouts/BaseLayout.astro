---
import "@fontsource/inter";
import type { Content } from "@galactiks/explorer";
import BaseLayout from "@galactiks/astro-integration/components/BaseLayout.astro";

type Props = { content?: Content };

const { content } = Astro.props;
---

<BaseLayout content={content} class:list={["h-screen", "bg-primary-background"]}>
  <slot name="head" slot="head">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </slot>

  <slot />
</BaseLayout>
