---
import { getSiteNavigationElement } from "@withmoons/explorer";
import { getDefaultLanguage } from "@withmoons/config";

import Container from "@components/Container.astro";
import Logo from "@components/Logo.astro";

const navigationElement = await getSiteNavigationElement({ inLanguage: getDefaultLanguage() });
---

<Container>
  <header class="mx-auto max-w-3xl flex flex-col lg:flex-row justify-between items-center my-8">
    <div class="flex w-full lg:w-auto items-center justify-between">
      <a href="/" class="text-lg"><Logo /></a>
    </div>
    <div class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
      <ul class="flex flex-col lg:flex-row lg:gap-3">
        {
          navigationElement.itemListElement.map(({ path, url, name }) => (
            <li>
              <a
                href={path || url}
                class="flex lg:px-3 py-2 text-gray-700 hover:text-gray-900"
              >
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </header>
</Container>
