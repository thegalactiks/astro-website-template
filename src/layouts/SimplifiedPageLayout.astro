---
import {
  type Content,
  getSamePartOfPages,
  getRelatedPages,
} from "@galactiks/explorer";

import PageLayout from "./PageLayout.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import TagItem from "@/components/TagItem.astro";
import Picture from "@/components/Picture.astro";
import ArticleCard from "@/components/ArticleCard.astro";

type Props = { content: Content };

const { content } = Astro.props;

const samePartOfPages = (await getSamePartOfPages(content)).slice(0, 3);
const relatedPages = (await getRelatedPages(content, samePartOfPages)).slice(
  0,
  3
);
---

<PageLayout content={content}>
  <div class="my-6 max-w-screen-lg mx-auto prose">
    {
      content.image && (
        <Picture
          class="rounded-xl overflow-hidden my-3 object-cover"
          src={content.image.contentUrl}
          widths={[300, 600, 900]}
          sizes={`(max-width: 360px) 300px, (max-width: 720px) 600px, 900px`}
          alt={content.image.name || content.name}
          transition:name={`img-${content.identifier}`}
        />
      )
    }

    <slot />

    <hr class="my-12" />
  </div>

  <div class="my-6 max-w-screen-lg mx-auto space-y-12">
    {
      Array.isArray(content.keywords) && content.keywords.length > 0 && (
        <div class="my-4 flex flex-wrap items-center w-full gap-3 lg:w-auto">
          {content.keywords.slice(0, 3).map((keyword) => (
            <TagItem
              class="text-sm text-gray-500"
              keyword={keyword}
              inLanguage={content.inLanguage}
            />
          ))}
        </div>
      )
    }

    {
      relatedPages.length > 0 && (
        <div class="my-4 grid grid-cols-1 gap-4 mt-4 sm:grid-cols-2 lg:grid-cols-3">
          {relatedPages.map((page) => (
            <ArticleCard article={page} />
          ))}
        </div>
      )
    }

    {
      samePartOfPages.length > 0 && (
        <div class="my-4 grid grid-cols-1 gap-4 mt-4 sm:grid-cols-2 lg:grid-cols-3">
          {samePartOfPages.map((page) => (
            <ArticleCard article={page} />
          ))}
        </div>
      )
    }

    <Breadcrumb page={content} class="mt-6" />
  </div>
</PageLayout>
