---
import type { ComponentProps } from "astro/types";
import { Picture as AstroPicture } from "astro:assets";

type Props = ComponentProps<typeof AstroPicture>;

const {
  formats = ["avif", "webp"],
  quality = "mid",
  widths = [200, 450, 900, 1250],
  ...props
} = Astro.props;
---

<AstroPicture
  widths={widths}
  formats={formats}
  quality={quality}
  inferSize
  {...props}
/>
