---
import type { ComponentProps } from "astro/types";
import { Picture as AstroPicture } from "astro:assets";
import { join } from "path";

type Props = ComponentProps<typeof AstroPicture> & {
  src: string;
};

const prefix = "/src/assets";

const {
  src,
  formats = ["avif", "webp"],
  quality = "mid",
  widths = [200, 450, 900, 1250],
  inferSize = true,
  ...props
} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{webp,WEBP,jpeg,JPEG,jpg,JPG,png,PNG,svg,SVG,gif,GIF,avif,AVIF}"
);
const srcPath = join(prefix, src.replace(/^\/assets\//, ''));
if (!images[srcPath]) {
  throw new Error(
    `"${srcPath}" does not exist in glob: "src/assets/**/*.{webp,WEBP,jpeg,JPEG,jpg,JPG,png,PNG,svg,SVG,gif,GIF,avif,AVIF}"`
  );
}
---

<AstroPicture
  src={images[srcPath]()}
  widths={widths}
  formats={formats}
  quality={quality}
  inferSize={inferSize}
  {...props}
/>
